{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": ["es2020", "esnext.asynciterable", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "~/*": ["src/*"],
      "*": ["types/*"]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2019",
    "types": ["@types/node", "@nuxt/types", "@nuxt/vue-app", "@nuxtjs/axios"]
  }
}
